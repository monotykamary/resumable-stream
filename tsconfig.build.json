{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "sourceMap": true,
    "noEmit": false,
    "preserveShebangs": true
  },
  "include": [
    "src/index.ts",
    "src/ioredis.ts",
    "src/redis.ts",
    "src/cli/postgres-setup.ts",
    "src/cli/postgres-cleanup.ts"
  ],
  "exclude": ["src/**/*.test.ts", "src/**/*.spec.ts", "node_modules"]
}
